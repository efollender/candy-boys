@import 'http://cdnjs.cloudflare.com/ajax/libs/foundation/5.3.3/css/foundation.min.css'

body 
  font-family 'Raleway'
  font-weight 200
h1,h2,h3,h4
  font-family 'brigregular'
a
  transition: all .5s ease-in-out
  &:hover 
    opacity .7
    color white
footer 
  background rgb(0, 48, 201)
  color white
  padding 1rem
  font-size 1.2rem
  text-transform uppercase
  font-weight bold
  a 
    color white
.row
  min-height 100vh
  min-width 100%
.noPadding 
  padding 0!important
#videos 
  background: url('../images/Capture_337.jpg')
  display: inline-block
  width: 100%
  color: white
  padding: 0!important
  .overlay
    background rgba(255,255,255,.3)
    display inline-block
    width 100%
    height 100%
    padding 4rem 0
  p 
    background rgb(255, 72, 72)
    padding .5rem
.flex-video 
  margin-bottom 0!important
.title-area h1 a
  color white
.top-bar 
  background none!important
  position absolute
  top 0
  width 100%
  z-index 99
  padding .5rem
.tourDate 
  background rgba(214, 253, 131, .65)
  color #555
  min-height 11rem
  overflow hidden
  text-align center
  padding 0
  border .5rem solid white
  transition all .5s ease-in-out
  p 
    font-size 1.2rem
    padding-top 10%
    font-weight lighter
  h4 
    color #FFF
    margin 0
    padding-top .4rem
    background rgb(255, 84, 84)
  &:hover 
    background rgba(250,250,250,.85)
    transform rotate3d(6deg,6deg,0,90deg)
.tour-dates 
  background-image url('../images/Capture_216.jpg')
  background-position center
  background-size cover
  display inline-block
  perspective 1500px
#tourdates-wrap
  padding 0 .5rem
#jumbotron
  margin-top:0
  background: url('../images/jumbotron.jpg')center
  background-size: cover
  display: inline-block
.side-nav 
  li
    transition all 1s ease-in-out
    width 0
    &:first-child
      background none!important
      &:hover
        background none!important
        transform scale(1.3)
    &:nth-child(5n+2)
      background-color #ff0044
    &:nth-child(5n+3)
      background-color #FFD600
    &:nth-child(5n+4)
      background-color #4FDB00
    &:nth-child(5n+0)
      background-color #00ABCC
    &:nth-child(5n+1)
      background-color #3400A3
    h1 
      a:not(.button)
        font-size 3rem
    a:not(.button)
      color white
      font-size 1.6rem
  &.mounted
    li
      width 100%
  &.past-main 
    width 100%!important
    position fixed
    z-index 99
    padding 0
    li
      width 14.28%!important
      float left
      &:first-child 
        display none
.login-panel
  button
    margin 3rem
    width 100%
  a
    color white