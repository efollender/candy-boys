.side-nav 
  li
    transition all 1s ease-in-out
    width 0
    &:first-child
      background none!important
      &:hover
        background none!important
        transform scale(1.3)
    &:nth-child(5n+2)
      background-color #ff0044
    &:nth-child(5n+3)
      background-color #FFD600
    &:nth-child(5n+4)
      background-color #4FDB00
    &:nth-child(5n+0)
      background-color #00ABCC
    &:nth-child(5n+1)
      background-color #3400A3
    h1 
      a:not(.button)
        font-size 3rem
    a:not(.button)
      color white
      font-size 1.6rem
  &.mounted
    li
      width 100%
  &.past-main 
    width 100%!important
    position fixed
    z-index 99
    padding 0
    li
      width 14.28%!important
      float left
      &:first-child 
        display none
